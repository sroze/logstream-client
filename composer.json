{
    "name": "sroze/log-stream",
    "autoload": {
        "psr-4": {
            "LogStream\\": "src/"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "require": {
        "symfony/serializer": "~2.7",
        "predis/predis": "~1.0",
        "guzzlehttp/guzzle": "~4.0",
        "textalk/websocket": "^1.2"
    },
    "suggest": {
        "sroze/fault-tolerance": "To handle fault tolerant LogStream"
    },
    "require-dev": {
        "phpspec/phpspec": "2.3.x@dev",
        "behat/behat": "^3.0",
        "symfony/http-kernel": "^3.0"
    }
}
